<AuModalContainer />
<AuModal
  @id="form-history"
  @closeModal={{fn (mut @isModalOpen) false}}
  @modalOpen={{@isModalOpen}}
  class="small"
  @title="Beschrijving doorgevoerde wijzigingen."
  as |Modal|
>
  <Modal.Body>
    <AuInput
      @id="history-message"
      @width="block"
      placeholder="Beschrijving wijzigingen"
      {{on "input" @updateValue}}
    />
  </Modal.Body>
  <Modal.Footer>
    <AuToolbar as |Group|>
      <Group>
        <AuButton
          {{on "click" @save}}
          @loading={{@isSaving}}
          @loadingMessage="Aan het opslaan"
        >
          Bevestig
        </AuButton>
      </Group>
    </AuToolbar>
  </Modal.Footer>
</AuModal>